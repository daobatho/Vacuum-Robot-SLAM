<?xml version="1.0"?>
<robot name="robot_vacuum">

  <!-- ================= BASE ================= -->
  <link name="base_link">
    <visual>
      <!-- nâng robot lên khỏi mặt đất -->
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= LEFT WHEEL ================= -->
  <link name="wheel_left">
    <visual>
      <origin xyz="0 0 0.033" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.033" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_wheel_left" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left"/>
    <origin xyz="0 0.11 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= RIGHT WHEEL ================= -->
  <link name="wheel_right">
    <visual>
      <origin xyz="0 0 0.033" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.033" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.033" length="0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="joint_wheel_right" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right"/>
    <origin xyz="0 -0.11 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= LASER ================= -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <!-- lidar đặt phía trước và cao hơn thân -->
    <origin xyz="0.12 0 0.08" rpy="0 0 0"/>
  </joint>

</robot>
